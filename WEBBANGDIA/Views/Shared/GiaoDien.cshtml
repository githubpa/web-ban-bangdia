<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/Style.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/catalog/view/theme/default/stylesheet/stylesheet.css" rel="stylesheet" />
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <meta name="description" content="Made with WOW Slider - Create beautiful, responsive image sliders in a few clicks. Awesome skins and animations. Image carousel" />
    <link href="~/Content/PagedList.css" rel="stylesheet" />
    <!-- Start WOWSlider.com HEAD section --> <!-- add to the <head> of your page -->
    <link href="~/Content/Slide/engine0/style.css" rel="stylesheet" />
    <script src="~/Content/Slide/engine0/jquery.js"></script>
    <script src="~/Scripts/jquery-1.8.2.js"></script>
    <!-- End WOWSlider.com HEAD section -->
    <title>@ViewBag.Title</title>
</head>
<body>
    <div id="fb-root"></div>
    <script>
        (function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s); js.id = id;
            js.src = "//connect.facebook.net/vi_VN/sdk.js#xfbml=1&appId=1573777262851758&version=v2.0";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));
    </script>
    <div class="login">
        <ul>
            <li>@Html.ActionLink("(Thoát)", "Logout", "Account")</li>
            <li><a href="#">|</a></li>
            <li style="line-height: 20px;">Chào @Session["FullName"].ToString()</li>
            <li><a href="#">|</a></li>
            <li>@Html.ActionLink("Đăng ký", "Register", "Account")</li>
            <li><a href="#">|</a></li>
            <li>@Html.ActionLink("Đăng nhập","Login","Account")</li>
            <li><a href="#">|</a></li>
            <li>@Html.ActionLink("Quản lý tài khoản ","Index","Account")</li>
        </ul>
        </div>
    <div id="header">
        <div id="logo">
            <img src="~/Images/Logo/LoGoBangDia.jpg" />
        </div>
        <div id="banner">
            <img src="~/Images/Banner/BannerDep.jpg" />
        </div>
        <marquee style="float: left;color: #00bfff; width: 277px;" onmouseover="this.stop()" onmouseout="this.start()" scrollamount="2" direction="down" width="100%" height="200" align="center">
            Cửa hàng Phạm Văn Hiệp<br/>
            Địa chỉ Lĩnh Nam - Hoàng Mai - Hà Nội<br/>
            Buôn bán băng đĩa đủ các loại<br />
            Ca nhạc<br />
            Phim<br />
            Video<br />
        </marquee>
    </div>

    <div id="menu">
        <ul>
            <li>
                @Html.ActionLink("Trang chủ", "Index", "Home")
            </li>
            <li>
                @Html.ActionLink("Liên hệ", "Index", "Contact")
            </li>
        </ul>
    </div>

    <div id="menuleft">
        <div id="danhmuc">
            <div id="tendanhmuc">Danh muc</div>

            @{
                Html.RenderAction("MenuLeft", "Menu");
            }
        </div>

    </div>

    <div id="main">
        @{
            Html.RenderAction("Search", "Menu");
        }
        @RenderBody()
        
        <div id="facebook">
            <div class="fb-comments" data-href="http://localhost:5471/Home/Index" data-numposts="5" data-colorscheme="light"></div>
        </div>
    </div>
    @{
        Html.RenderAction("Right", "Menu");
    }
</body>
</html>
