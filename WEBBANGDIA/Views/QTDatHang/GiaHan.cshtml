@model WEBBANGDIA.Models.DatHang

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <div class="editor">
            <div class="editor-label">
                Mã đặt hàng
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.MaDH)
                @Html.ValidationMessageFor(model => model.MaDH)
            </div>
        </div>
        <div class="editor">
            <div class="editor-label">
                Tài khoản
            </div>
            <div class="editor-field">
                @Html.DropDownList("MaTK", String.Empty)
                @Html.ValidationMessageFor(model => model.MaTK)
            </div>
        </div>
        <div class="editor">
            <div class="editor-label">
                Băng đĩa
            </div>
            <div class="editor-field">
                @Html.DropDownList("MaBD", String.Empty)
                @Html.ValidationMessageFor(model => model.MaBD)
            </div>
        </div>
        <div class="editor">
            <div class="editor-label">
                Loại hình giao dịch
            </div>
            <div class="editor-field">
                @Html.DropDownList("MaLoaiHinh", String.Empty)
                @Html.ValidationMessageFor(model => model.MaLoaiHinh)
            </div>
        </div>
        <div class="editor">
            <div class="editor-label">Ngày đặt</div>
            <div class="editor-field">
                @Html.EditorFor(model => model.NgayDat)
                @Html.ValidationMessageFor(model => model.NgayDat)
            </div>
        </div>
        <div class="editor">
            <div class="editor-label">Trả</div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Tra)
                @Html.ValidationMessageFor(model => model.Tra)
            </div>
        </div>
        <div class="editor">
            <div class="editor-label">Lần gia hạn</div>
            <div class="editor-field">
                @Html.EditorFor(model => model.GiaHan)
                @Html.ValidationMessageFor(model => model.Tra)
            </div>
        </div>
        <div class="editor">
            <div class="editor-label">Lần gia hạn</div>
            <div class="editor-field">
                <p>
                    <input type="submit" value="Gia hạn" />
                </p>
            </div>
        </div>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
